<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ktds.jobs.WorkPatternListActivity">
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="18dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="keyword를 입력해주세요"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/sea"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="18dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_go_main"
                    android:text="Home"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border"
                    />

                <Button
                    android:id="@+id/btn_job_type"
                    android:text="직업·직종"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border"/>

                <Button
                    android:id="@+id/btn_work_pattern"
                    android:text="근무형태"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border"/>

                <Button
                    android:id="@+id/btn_location"
                    android:text="근무지·지역"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border"/>



            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="10dp"
        android:textColor="#2c72a4"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_menu" />
    <ListView
        android:id="@+id/lv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text"  />

</android.support.constraint.ConstraintLayout>
