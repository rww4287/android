<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="300dp"
    tools:context="com.ktds.whowho.MainActivity">

    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Brand Name"
        android:textSize="20dp"
        android:background="#aa9000ff"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#aaffee00"
        android:text="phonNumber"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tv_spam_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#AAFF0000"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Danger!"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_spam_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:text="fadsfasdfasdfasdfsadfas"
        android:textSize="15dp"/>

</android.support.constraint.ConstraintLayout>
