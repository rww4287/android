<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

		<bean id="userDaoImpl"
		       class="com.spring.user.dao.UserDaoImpl">
		   <property name="sqlSessionTemplate" ref="sqlSessionTemplate"/>
		</bean>
		
		
		<bean id="userBizImpl" class="com.spring.user.biz.UserBizImpl">
			<property name="userDao" ref="userDaoImpl"></property>
		</bean>


		<bean id="userServiceImpl" class="com.spring.user.service.UserServiceImpl">
			<property name="userBiz" ref="userBizImpl"></property>
		</bean>
		
</beans>
